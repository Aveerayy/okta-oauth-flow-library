# Okta OAuth Configuration
# Copy this to your .env.local file and fill in your values

# Required Okta Configuration
OKTA_CLIENT_ID=your-okta-client-id-here
OKTA_CLIENT_SECRET=your-okta-client-secret-here
OKTA_ISSUER=https://dev-123456.okta.com/oauth2/default
OKTA_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Optional Configuration
OKTA_SCOPES=openid,profile,email,groups
NEXTAUTH_SECRET=your-random-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Backend API Configuration (for proxy requests)
BACKEND_API_URL=https://api.yourbackend.com

# Session Configuration
SESSION_TIMEOUT=3600000
TOKEN_REFRESH_BUFFER=300000
